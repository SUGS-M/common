<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myy.common.group.mapper.GroupMapper">

    <select id="findByPage" resultType="com.myy.common.group.vo.GroupVo"
            parameterType="com.myy.common.group.vo.GroupSearchVo">
        SELECT * FROM sys_group t WHERE t.del_flag='0'
        <if test="needOrder">ORDER BY t.update_time DESC,t.id</if>
    </select>

</mapper>