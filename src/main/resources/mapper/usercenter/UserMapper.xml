<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myy.common.usercenter.mapper.UserMapper">

    <select id="findByPage" resultType="com.myy.common.usercenter.vo.UserVo"
            parameterType="com.myy.common.usercenter.vo.UserSearchVo">
        SELECT * FROM sys_user t WHERE t.del_flag='0'
        <if test="needOrder">ORDER BY t.update_time DESC,t.id</if>
    </select>
    <select id="findByUsername" resultType="com.myy.common.usercenter.entity.User">
        SELECT * FROM SYS_USER t WHERE t.del_flag='0' AND t.username=#{username}
    </select>

</mapper>